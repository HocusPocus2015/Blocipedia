

<div class="container">
  <div class="row">
    <h4>Wiki Collaborators</h4>
    <% @wiki.collaborators.each do |collaborator| %>
      <p>
        <%= collaborator.user.email %>
          <%= link_to "Delete", [collaborator], method: :delete, class: 'btn btn-danger' %>
      </p>
    <% end %>
  </div>
</div>

<% if current_user = User.where(role: ["premium", "admin"]) %>
  <%= form_tag collaborators_path, method: :wiki do %>
    <%= text_field_tag :email %>
    <%= hidden_field_tag :wiki_id, @wiki.id %>
    <%= submit_tag "Add Collaborator", class: "btn btn-info" %>
    <%= link_to "Back", :back, class: "btn btn-warning" %>
  <% end %>
<% end %>
