

<% if current_user = User.where(role: ["premium", "admin"]) %>
  <%= form_tag collaborators_path, method: :wiki do %>
    <%= text_field_tag :email %>
    <%= hidden_field_tag :wiki_id %>
    <%= hidden_field_tag :user_id %>
    <%= submit_tag "Add Collaborator", class: "btn btn-info" %>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <h4>Wiki Collaborators</h4>
    <% @wiki.each do |collaborator| %>
      <p>
        <%= collaborator.user.email %>
        <% if @wiki.user == current_user %>
          <%= link_to "", [collaborator], method: :delete, class: 'glyphicon glyphicon-ok' %>
        <% end %>
      </p>
    <% end %>
  </div>
</div>
